<%- include("./partials/header.ejs") %>
    <!-- Responsive navbar -->
    <nav>
        <div class="menu-icon">
            <span class="fas fa-bars"></span>
        </div>
        <div class="logo">Welcome ,
            <span><%=user.displayName%></span>

        </div>
        <div class="nav-items">
            <li><a href="/auth/logout">Logout</a></li>
            <li><a href="/dashboard">Dashboard</a></li>
        </div>
        <div class="search-icon">
            <span class="fas fa-search"></span>
        </div>
        <div class="cancel-icon">
            <span class="fas fa-times"></span>
        </div>
        <form action="/searchResults" method="post">
            <input type="text" name="search" class="search-data" placeholder="Search here" autocomplete="off" />
            <button type="submit" class="fas fa-search"></button>
        </form>
    </nav>

    <div class="page-title">
        <h1>Search Results . . .</h1>
    </div>
    <div class="wrapper">
        <% if(results){ %>
            <% results.forEach((result,index)=>{ %>
                <li class="note">
                    <div class="details">
                        <a href="/show/<%= result._id%>">
                            <p>
                                <%= result.title %>
                            </p>
                        </a>
                        <span><%= result.description %></span>
                    </div>
                    <div class="bottom-content">
                        <span><%= moment(result.createdAt).format('DD-MM-YYYY'); %></span>
                        <div class="settings">
                            <i class="fa-solid fa-ellipsis"></i>
                            <ul class="menu">
                                <form action="/edit/<%= result._id %>" class="edit-btn">
                                    <div class="edit-update">
                                        <i class="fa-solid fa-pen"></i>
                                        <button>Edit</button>
                                    </div>
                                </form>
                                <form action="/delete/<%=result._id%>" class="delete-btn" method="post">
                                    <div class="edit-update">
                                        <i class="fa-solid fa-trash-can"></i>
                                        <button>Delete</button>
                                    </div>
                                </form>
                            </ul>
                        </div>
                    </div>
                </li>
                <% }) %>
                    <% }%>
    </div>
    <%- include("./partials/footer.ejs") %>