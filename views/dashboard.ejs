<%- include("./partials/header.ejs") %>
    <nav>
        <div class="menu-icon">
            <span class="fas fa-bars"></span>
        </div>
        <div class="logo"> Welcome ,
            <span><%=user.displayName%></span>
        </div>
        <div class="nav-items">
            <li><a href="/auth/logout" class="btn btn-logout">Logout</a></li>
            <li><a href="/dashboard" class="btn">Dashboard</a></li>
        </div>
        <div class="search-icon">
            <span class="fas fa-search"></span>
        </div>
        <div class="cancel-icon">
            <span class="fas fa-times"></span>
        </div>
        <form action="/searchResults" method="post">
            <input type="text" name="search" class="search-data" placeholder="Search here" autocomplete="off">
            <button type="submit" class="fas fa-search"></button>
        </form>
    </nav>
    <div class="wrapper">
        <li class="addbox">
            <div class="icon">
                <a href="/addnote"><i class="fa-solid fa-plus"></i></a>
            </div>
            <p>Add New Note</p>
        </li>

        <% if(notes){ %>
            <% notes.forEach((note)=>{ %>


                <li class="note">
                    <div class="details">
                        <a href="/show/<%= note._id%>">
                            <p>
                                <%= note.title %>
                            </p>
                        </a>
                        <span><%= note.description %></span>
                    </div>
                    <div class="bottom-content">
                        <span><%= moment(note.createdAt).format('DD-MM-YYYY'); %></span>
                        <div class="settings">
                            <i class="fa-solid fa-ellipsis"></i>
                            <ul class="menu">
                                <form action="/edit/<%= note._id %>" class="edit-btn">
                                    <div class="edit-update">
                                        <i class="fa-solid fa-pen"></i>
                                        <button>Edit</button>
                                    </div>


                                </form>
                                <form action="/delete/<%=note._id%>" class="delete-btn" method="post">
                                    <div class="edit-update">
                                        <i class="fa-solid fa-trash-can"></i>
                                        <button>Delete</button>
                                    </div>


                                </form>
                                <form action="/show/<%=note._id %>">
                                    <div class="read edit-update">
                                        <i class="fa-solid fa-book-open"></i>
                                        <button>Read</button>
                                    </div>
                                </form>

                            </ul>
                        </div>
                    </div>
                </li>
                <% }) %>
                    <% } %>
    </div>

    <footer>
        <!-- <p>All Rights Reserved</p> -->
        <p>Built with lots of Motivation and love by <a href="">codewarriors</a></p>
    </footer>


    <%- include("./partials/footer.ejs") %>